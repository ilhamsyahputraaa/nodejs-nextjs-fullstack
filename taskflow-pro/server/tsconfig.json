{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "../controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "../services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"] // <--- tambahin ini
    }
  }
}
